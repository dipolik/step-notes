<!doctype html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Card List</title>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
</head>

<body>
	<div class="container" data-id="<%= list._id%>">
		<div class="row mt-3 text-center">
			<div class="col mt-3 align-self-center inputs-wrapper">
				<div class="input-group mb-3">
					<div class="input-group-prepend">
						<span class="input-group-text" id="basic-addon1">Title</span>
					</div>
					<input type="text" id="title" class="form-control" data-value="<%= list.title%>">
				</div> <%list.list.forEach(elem => {%>
				<div class="input-group mb-3 task-item">
					<div class="input-group-prepend">
						<div class="input-group-text">
							<%if(!elem.status){%>
							<input type="checkbox">
							<%} else {%>
							<input type="checkbox" checked>
							<%}%> 
						</div>
					</div>
					<input type="text" class="form-control list-task" data-value="<%=elem.text%>">
						</div>
						<%})%>
						<div class="row mt-4 button-wrapper">
							<div class="col-4 text-center">
								<button type="button" id="addTask" class="btn btn-success">New task</button>
							</div>
							<div class="col-4 text-center">
								<button type="button" id="change" class="btn btn-warning">Change</button>
							</div>
							<div class="col-4 text-center">
								<button type="button" id="delete" class="btn btn-danger">Delete</button>
							</div>
						</div>
					</div>
				</div>
			</div>


			<script src="/js/card-list.js"></script>
</body>

</html>
